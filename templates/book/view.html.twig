<div class="lib-container">

    <h1>Books</h1>
    <div class="lib-container">

    <img class="library-bird2" src="{{ asset('img/title-bird.svg') }}" alt="Library Bird Svg"/>

    <div class="library-container">

    <table class="library-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Id</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
            <tr>
                <td>{{ book.getName|e }}</td>
                <td>{{ book.getId|e }}</td>
                <td>{{ book.getAuthor|e }}</td>
            </tr>
            {% endfor %}
        </tbody>
        </table>
    </div>
