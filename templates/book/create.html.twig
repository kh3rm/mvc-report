{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .title-bird {
        display: none;
    }
</style>


<div class="lib-container">

    <h1>Add New Book</h1>
    <br>
    <div class="lib-container">

    <img class="library-bird2" src="{{ asset('img/title-bird.svg') }}" alt="Library Bird Svg"/>

    <img class="library-book" src="{{ asset('img/book2.svg') }}" alt="Library Bird Svg"/>



<div class="library-container">
    <form action="/book/create" method="POST" class="library-form">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>
        </div>
        <div>
            <label for="author">Author:</label>
            <input type="text" id="author" name="author" required>
        </div>
        <div>
            <label for="isbn">ISBN:</label>
            <input type="text" id="isbn" name="isbn" required>
        </div>
        <div>
            <label for="image_source">Image Source:</label>
            <input type="text" id="image_source" name="image_source">
        </div>
        <div class="create-button-container">
            <button class="library-button" type="submit">Submit</button>
        </div>
    </form>
</div>

</div>
{% endblock %}
